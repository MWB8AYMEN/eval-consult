{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('../../bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css') }}">
{% endblock %}
{% block title %}EVAl CONSULTS{% endblock %}

{% block body %}
    {{ parent() }}

    {%  block content_header %}
        <a href="{{ path('new_category') }}">
            <button type="button" class="btn btn-block btn-default btn-lg btn-new">Nouvelle Category</button>
        </a>
    {% endblock %}

    {% block content %}
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Category</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="data" class="table table-bordered table-striped" >
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th></th>
                            </thead>
                            <tbody>
                            {% for category in categories %}
                            <tr>
                                <td width="200">{{ category.name }}</td>
                                <td width="200">{{ category.description }}</td>
                                <td width="200"><a href="{{ path('edit_category',{'category' : category.id}) }}" class="btn btn-app">
                                        <i class="fa fa-edit"></i> Edit
                                    </a></td>
                            </tr>
                            {% endfor %}
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('../../bower_components/bootstrap/dist/js/bootstrap.min.js')}}"></script>
        <script src="{{ asset('../../bower_components/datatables.net/js/jquery.dataTables.min.js') }}"></script>
        <script src="{{ asset('../../bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
        <script src="{{ asset('../../dist/js/adminlte.min.js')}}"></script>
        <script src="{{ asset('../../dist/js/demo.js')}}"></script>
        <script>
            $(function () {
                $('#data').DataTable({
                    'paging'      : false,
                    'lengthChange': false,
                    'searching'   : false,
                    'ordering'    : true,
                    'info'        : true,
                    'autoWidth'   : false
                })
            })
        </script>
    {% endblock %}


{% endblock %}

