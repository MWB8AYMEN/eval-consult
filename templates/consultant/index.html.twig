{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet"
          href="{{ asset('../../bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css') }}">
{% endblock %}
{% block title %}EVAl CONSULTS{% endblock %}


    {% block content_header %}
        <a href="{{ path('new_consultant') }}">
            <button type="button" class="btn btn-block btn-default btn-lg btn-new">Nouveau Consultant</button>
        </a>
    {% endblock %}

    {% block content %}
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Consultants</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="data" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Login</th>
                                <th>Firstname</th>
                                <th>Lastname</th>
                                <th>Plateform</th>
                                <th>Fonction</th>
                                <th>Nb Expriences</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for consultant in consultants %}
                                <tr>
                                    <td width="200">{{ consultant.username }}</td>
                                    <td width="200">{{ consultant.firstname }}</td>
                                    <td width="200">{{ consultant.lastname }}</td>
                                    <td width="200">{{ consultant.plateform }}</td>
                                    <td width="200">{{ consultant.fonction }}</td>
                                    <td width="200">{{ consultant.nbExperiences }}</td>
                                    <td width="200"><a
                                                href="{{ path('edit_consultant',{'consultant' : consultant.id}) }}"
                                                class="btn btn-app">
                                            <i class="fa fa-edit"></i> Edit
                                        </a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    {% endblock %}


